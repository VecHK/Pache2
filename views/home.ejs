<!doctype HTML>
<html>
<head>
	<title>Pache</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
	<meta http-equiv="content-type" content="text/html" charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge;chrome=1;" />
	<meta name="HandheldFriendly" content="true" />
	<link rel="stylesheet" href="/style/global.css" />
</head>
<body>
	<header>
		<div class="local">PAE</div>
		<div class="tags">
			<% if (!Array.isArray(tags)) { tags = [] } %>
			<% recommendTags.forEach(tag => { %>
				<% let result = tags.indexOf(tag) %>
				<% if (result !== -1) { %>
				<%	let tagHref = [...tags, tag]; %>
				<%	if (tags.length === 1) { %>
					<a href="/" class="current"><%= tag %></a>
				<%	} else { %>
				<% let newTags = Array.from(tags); let cursor = newTags.indexOf(tag);
					if (cursor !== -1) {
						newTags.splice(cursor, 1);%>
						<a href="/tag/<%= newTags.join(', ') %>" class="current"><%= tag %></a>
				<%} else { %>

				<% } %>

				<%	} %>
				<% } else { %>
					<a href="/tag/<%= [...tags, tag].join(', ') %>"><%= tag %></a>
				<% } %>
			<% }) %>
		</div>
	</header>
	<ul class="list">
		<% list.forEach(item => {  %>
			<li>
				<div class="title">
					<a href="/article/<%= item._id %>"><%= item.title %></a>
				</div>
				<time class="time"><%= item.date.toLocaleDateString() %></time>
			</li>
		<% }) %>
	</ul>
	<% include public/pagecode %>
	<footer>
		至童装之致，执同装之志
	</footer>
</body>
</html>
