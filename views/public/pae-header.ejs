<header role="banner"><%
var left = {
	src: categories[0],
	status: ''
};
var right = {
	src: categories[1],
	status: ''
};

var home_status = '';
if (left.src && left.src._id.toString() === conditions.category) {
	left.status = 'current';
} else if (right.src && right.src._id.toString() === conditions.category) {
	right.status = 'current';
} else {
	home_status = 'current';
}
%>
		<a <%= left.status %> href="/category/<%= left.src.name %>"><%= left.src.name %></a>
		<a <%= home_status %> href="/">首頁</a>
		<a <%= right.status %> href="/category/<%= right.src.name %>"><%= right.src.name %></a>
	</header>

	<div class="page-shadow"></div>
